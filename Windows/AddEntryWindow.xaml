<Window x:Class="FinalYearProject.Windows.AddEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Vault Entry"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#0C0512">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,10">
            <TextBox x:Name="TitleBox"
                     Height="40" FontSize="16"
                     Background="#1A1A2E"
                     Foreground="White"
                     BorderThickness="0"
                     Padding="10"/>
            <TextBlock Text="Title (e.g. Facebook Login)"
                       Foreground="Gray"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding Text.IsEmpty, ElementName=TitleBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10">
            <TextBox x:Name="UsernameBox"
                     Height="40" FontSize="16"
                     Background="#1A1A2E"
                     Foreground="White"
                     BorderThickness="0"
                     Padding="10"/>
            <TextBlock Text="Username / Email"
                       Foreground="Gray"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding Text.IsEmpty, ElementName=UsernameBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10">
            <PasswordBox x:Name="PasswordBox"
                         Height="40" FontSize="16"
                         Background="#1A1A2E"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="10"/>
            <TextBlock Text="Password"
                       Foreground="Gray"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding Password.IsEmpty, ElementName=PasswordBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,10">
            <TextBox x:Name="NotesBox"
                     Height="80" FontSize="16"
                     Background="#1A1A2E"
                     Foreground="White"
                     BorderThickness="0"
                     Padding="10"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"/>
            <TextBlock Text="Notes (optional)"
                       Foreground="Gray"
                       Margin="12,0,0,0"
                       VerticalAlignment="Top"
                       IsHitTestVisible="False"
                       Visibility="{Binding Text.IsEmpty, ElementName=NotesBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save"
                    Width="100" Height="40"
                    Margin="0,0,10,0"
                    Background="#00C853"
                    Foreground="White"
                    FontSize="16"
                    BorderThickness="0"
                    Click="Save_Click"/>
            <Button Content="Cancel"
                    Width="100" Height="40"
                    Background="#2A2A40"
                    Foreground="White"
                    FontSize="16"
                    BorderThickness="0"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
