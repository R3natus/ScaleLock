<Window x:Class="FinalYearProject.Windows.PasswordGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Password Strength Checker"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Gradient background consistent with ScaleLock -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1A2E" Offset="0.0"/>
            <GradientStop Color="#16213E" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="0,0,-70,-95">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Left side: input + feedback -->
            <ColumnDefinition Width="3*"/>
            <!-- Right side: mascot -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Password Checker"
                       FontSize="26"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <PasswordBox x:Name="PasswordBox"
                         Width="300"
                         FontSize="18"
                         Margin="0,0,0,20"
                         PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBlock x:Name="FeedbackText"
                       FontSize="18"
                       Foreground="#E0E0E0"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Right Panel (Mascot) -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="579" Width="848">
            <Image x:Name="MascotImage"
       Stretch="Uniform"
       MaxHeight="500"
       MaxWidth="1500"
       d:Source="Assets/Investigating.png">
                <Image.RenderTransform>
                    <TranslateTransform x:Name="MascotTransform" Y="0"/>
                </Image.RenderTransform>
            </Image>

        </StackPanel>
    </Grid>
</Window>
