<Window x:Class="FinalYearProject.Windows.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#8E2DE2" Offset="-0.7"/>
                    <GradientStop Color="#1E005C" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Username" FontSize="20" Foreground="White" Margin="0 0 0 5"/>
            <TextBox x:Name="NewUsernameBox" FontSize="22" Height="40" Margin="0 0 0 15"/>

            <TextBlock Text="Password (Must be >6 characters!)" FontSize="20" Foreground="White" Margin="0 0 0 5"/>
            <PasswordBox x:Name="NewPasswordBox" FontSize="22" Height="40" Margin="0 0 0 15"/>

            <TextBlock Text="Confirm Password" FontSize="20" Foreground="White" Margin="0 0 0 5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" FontSize="22" Height="40" Margin="0 0 0 15"/>

            <TextBlock Text="Secret Question" FontSize="20" Foreground="White" Margin="0 0 0 5"/>
            <ComboBox x:Name="SecretQuestionBox" FontSize="20" Height="40" Margin="0 0 0 15">
                <ComboBoxItem Content="What is your favorite color?"/>
                <ComboBoxItem Content="What is your pet's name?"/>
                <ComboBoxItem Content="What city were you born in?"/>
                <ComboBoxItem Content="What are you here for, really>"/>
                <ComboBoxItem Content="What's your favorite food?"/>
            </ComboBox>

            <TextBlock Text="Answer" FontSize="20" Foreground="White" Margin="0 0 0 5"/>
            <TextBox x:Name="SecretAnswerBox" FontSize="22" Height="40" Margin="0 0 0 20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Create Account" Width="200" Height="50" Background="Green"
                        FontSize="20" Foreground="White" Click="CreateAccount_Click" Margin="0 0 10 0"/>
                <Button Content="Close" Width="200" Height="50" Background="Gray"
                        FontSize="20" Foreground="White" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
