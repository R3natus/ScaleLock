<Window x:Class="FinalYearProject.Windows.ShowCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vault Entry"
        Height="350" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A2E"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="360">

            <!-- Title -->
            <TextBlock Text="{Binding Title}"
                       FontSize="22"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Username -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Username: " Foreground="White" FontSize="16"/>
                <TextBlock x:Name="UsernameBlock" Text="••••••••" Foreground="#E0E0E0" FontSize="16" Margin="5,0,0,0"/>
                <Button Content="SHOW" Margin="10,0,0,0"
                        Background="#00C853" Foreground="White"
                        BorderThickness="0" Padding="5,2"
                        Click="ShowUsername_Click"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Password: " Foreground="White" FontSize="16"/>
                <TextBlock x:Name="PasswordBlock" Text="••••••••" Foreground="#E0E0E0" FontSize="16" Margin="5,0,0,0"/>
                <Button Content="SHOW" Margin="10,0,0,0"
                        Background="#00C853" Foreground="White"
                        BorderThickness="0" Padding="5,2"
                        Click="ShowPassword_Click"/>
            </StackPanel>

            <!-- Notes -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Notes:" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
                <TextBlock x:Name="NotesBlock"
                           Text="••••••••"
                           Foreground="#E0E0E0"
                           FontSize="14"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,5"/>
                <Button Content="SHOW"
                        Background="#00C853"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="5,2"
                        HorizontalAlignment="Center"
                        Click="ShowNotes_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
