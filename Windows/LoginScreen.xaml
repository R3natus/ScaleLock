<Window x:Class="FinalYearProject.Windows.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScaleLock"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#8E2DE2" Offset="-0.7"/>
                    <GradientStop Color="#1E005C" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <DockPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Username -->
                <TextBlock Text="Username" FontSize="18" Foreground="White" Margin="0 0 0 5" Width="81"/>
                <TextBox x:Name="UsernameBox" FontSize="24" Width="377" Height="43" Margin="0 0 0 10"/>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="18" Foreground="White" Margin="0 0 0 5" Width="76"/>
                <PasswordBox x:Name="PasswordBox" FontSize="24" Width="377" Height="43" Margin="0 0 0 5"/>

                <!-- Login Button (Green) -->
                <Button Content="Login" Width="369" Height="62" Background="#7A66BB"
                        FontSize="20" Foreground="White" FontWeight="Bold"
                        Margin="0 0 0 10" Click="Login_Click"/>
                <Button Content="Register" Width="369" Height="62" Background="#66BB6A"
                        FontSize="20" Foreground="White" FontWeight="Bold"
                        Click="Register_Click"/>

                <!-- Register Button (Green) -->
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
